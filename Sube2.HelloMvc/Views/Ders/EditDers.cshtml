@model Sube2.HelloMvc.Models.Ders
@{
    ViewBag.Title = "Ders Düzenle";
}

<div class="container mt-5">
    <h2>Ders Düzenle</h2>
    <form asp-action="EditDers" method="post">
        <input type="hidden" asp-for="Dersid" />
        <div class="form-group">
            <label for="Dersad">Ders Adı</label>
            <input type="text" class="form-control" asp-for="Dersad" required>
        </div>
        <div class="form-group">
            <label for="Kredi">Kredi</label>
            <input type="number" class="form-control" asp-for="Kredi" required>
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
