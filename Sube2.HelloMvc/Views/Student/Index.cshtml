@model IEnumerable<Sube2.HelloMvc.Models.Ogrenci>
@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<div class="container mt-5">
    <h2>Öğrenci Listesi</h2>
    <a class="btn btn-primary mb-3" asp-action="AddStudent">Yeni Öğrenci Ekle</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Numara</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ogrenci in Model)
            {
                <tr>
                    <td>@ogrenci.Numara</td>
                    <td>@ogrenci.Ad</td>
                    <td>@ogrenci.Soyad</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="EditStudent" asp-route-id="@ogrenci.OgrenciId">Düzenle</a>
                        <a class="btn btn-sm btn-danger" asp-action="DeleteStudent" asp-route-id="@ogrenci.OgrenciId">Sil</a>
                        <a class="btn btn-sm btn-warning" asp-action="AssignDers" asp-route-id="@ogrenci.OgrenciId">Ders Ekle</a>
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@ogrenci.OgrenciId">Detaylar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success mt-3" asp-action="ViewAllStudentsDers">Tüm Öğrencilerin Derslerini Görüntüle</a>
</div>
