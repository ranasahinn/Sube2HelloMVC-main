@model Sube2.HelloMvc.Models.Ogrenci
@{
    ViewBag.Title = "Yeni Öğrenci Ekle";
}

<div class="container mt-5">
    <h2>Yeni Öğrenci Ekle</h2>
    <form asp-action="AddStudent" method="post">
        <div class="form-group">
            <label for="Ad">Ad</label>
            <input type="text" class="form-control" id="Ad" name="Ad" required>
        </div>
        <div class="form-group">
            <label for="Soyad">Soyad</label>
            <input type="text" class="form-control" id="Soyad" name="Soyad" required>
        </div>
        <div class="form-group">
            <label for="Numara">Numara</label>
            <input type="number" class="form-control" id="Numara" name="Numara" required>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>
