@model Sube2.HelloMvc.Models.Ogrenci
@{
    ViewBag.Title = "Öğrenci Düzenle";
}

<div class="container mt-5">
    <h2>Öğrenci Düzenle</h2>
    <form asp-action="EditStudent" method="post">
        <input type="hidden" asp-for="OgrenciId" />
        <div class="form-group">
            <label for="Ad">Ad</label>
            <input type="text" class="form-control" asp-for="Ad" required>
        </div>
        <div class="form-group">
            <label for="Soyad">Soyad</label>
            <input type="text" class="form-control" asp-for="Soyad" required>
        </div>
        <div class="form-group">
            <label for="Numara">Numara</label>
            <input type="number" class="form-control" asp-for="Numara" required>
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
